<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btRemoveFromLiked"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/ambiant"
        android:backgroundTint="@color/ambiant"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="2dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:textAlignment="textStart"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/menuFont"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/ambiant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/btDescription"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btDescription"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:drawablePadding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:icon="?android:attr/actionModeWebSearchDrawable"
        app:iconGravity="start"
        app:iconPadding="0dp"
        app:iconSize="28dp"
        app:iconTint="@color/ambiant"
        app:iconTintMode="src_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toEndOf="@+id/tvNameResult"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAddToLiked"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/ambiant"
        android:backgroundTint="@color/ambiant"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="2dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:textAlignment="textStart"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/menuFont"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/ambiant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toEndOf="@+id/btDescription"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameResult"
        android:layout_width="163dp"
        android:layout_height="31dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
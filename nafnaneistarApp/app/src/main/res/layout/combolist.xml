<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    style="@style/tableStyle"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:dividerPadding="4dp"
    android:isScrollContainer="true"
    android:showDividers="middle|beginning|end"><![CDATA[

    />















    ]]>

    <TextView
        android:id="@+id/comboListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="start"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/viewLikedPlaceholderName"
        android:textAppearance="?attr/textAppearanceListItem"
        app:autoSizeMaxTextSize="16sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <LinearLayout
        android:id="@+id/llRatingContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="🤍"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="🤍"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="🤍"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="🤍"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/r5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:text="🤍"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:visibility="invisible" />
    </LinearLayout>

    <Button
        android:id="@+id/comboListOperations"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/ambiant"
        android:backgroundTint="@color/ambiant"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:minWidth="2dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:textAlignment="textStart"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/menuFont"
        app:icon="@android:drawable/ic_delete"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/ambiant" />

</LinearLayout>